{
    "buildCommand": "echo 'Static site - no build required'",
    "outputDirectory": ".",
    "framework": null,
    "rewrites": [
        {
            "source": "/terms",
            "destination": "/pages/terms.html"
        },
        {
            "source": "/privacy",
            "destination": "/pages/privacy.html"
        },
        {
            "source": "/safety",
            "destination": "/pages/safety.html"
        },
        {
            "source": "/faq",
            "destination": "/pages/faq.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/images/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/home",
            "destination": "/",
            "permanent": true
        }
    ]
}